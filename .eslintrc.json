{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "arrow-parens": [2, "as-needed"],
    "no-continue": "off",
    "max-len": "off",
    "linebreak-style": "off",
    "prefer-destructuring": "off",
    "no-use-before-define": "off",
    "no-param-reassign": "off"
  }
}
